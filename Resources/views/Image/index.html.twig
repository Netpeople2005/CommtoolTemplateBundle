{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Image list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Large</th>
                <th>Medium</th>
                <th>Small</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gallery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.large }}</td>
                <td>{{ entity.medium }}</td>
                <td>{{ entity.small }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gallery_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gallery_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('gallery_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
