{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Image</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Large</th>
                <td>{{ entity.large }}</td>
            </tr>
            <tr>
                <th>Medium</th>
                <td>{{ entity.medium }}</td>
            </tr>
            <tr>
                <th>Small</th>
                <td>{{ entity.small }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gallery') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('gallery_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
